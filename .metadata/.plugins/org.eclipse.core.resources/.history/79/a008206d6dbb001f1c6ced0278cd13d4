package techLink;

import java.util.Formatter;

public class DrawStars {
	
	public static void main(String[] args) {
		DrawStars ds = new DrawStars();
		ds.question2();
	}
	
	public void question1() {
		for(int i=1;i<=5;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	public void question2() {
		 
		Formatter fmt = new Formatter();
	        
		for(int i=5;i>=1;i--) {
//			fmt.format("%"+i+"s", " ");
//			System.out.print(fmt);
			for(int j=5;j>=i;j--) {
//				fmt.format("%-1s", "*");
//				System.out.print(fmt);
				System.out.print("*");
			}
			System.out.println();
		}
		
	        fmt.close();
		
	}

}
